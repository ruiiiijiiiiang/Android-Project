    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="match_parent">
        <EditText android:layout_width="wrap_content" android:id="@+id/hourText" android:layout_height="wrap_content" android:layout_weight="0.23"></EditText>
